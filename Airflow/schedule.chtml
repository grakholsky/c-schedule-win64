    <script>
		var openWindowId = "";
		var optionClick = 0;
		
        document.getElementById("week-1").onclick = function () {
            document.getElementById("week1").style.display = "block";
            document.getElementById("week2").style.display = "none";
        }
        document.getElementById("week-2").onclick = function () {
            document.getElementById("week1").style.display = "none";
            document.getElementById("week2").style.display = "block";
        }
		
		function setOptions ( idElement ) {
			if (optionClick == 0) {
				if (openWindowId != "") {
					document.getElementById(openWindowId).style.display = "none";
				}
				document.getElementById(idElement).style.display = "block";
				openWindowId = idElement;
				optionClick = 1;
			} else {
				if (openWindowId != idElement) {
					document.getElementById(openWindowId).style.display = "none";
					document.getElementById(idElement).style.display = "block";
					openWindowId = idElement;
					optionClick = 1;
				} else {
					document.getElementById(idElement).style.display = "none";
					openWindowId = "";
					optionClick = 0;
				}
			}
		}
		
		document.getElementById("nav-faculties").onclick = function () { setOptions("nav-options-faculties"); }
		
		document.getElementById("nav-cafedras").onclick = function () { setOptions("nav-options-cafedras"); }
		
		document.getElementById("nav-groups").onclick = function () { setOptions("nav-options-groups"); }
		
		var faculties = document.getElementsByClassName("nav-faculties-link");

		for (var i = 0; i < faculties.length; i++) {
			faculties[i].addEventListener("click", (function(i) {
				return function() {
					var oldChild = document.getElementById("nav-faculties-selected").children[0];
					var oldChildID = oldChild.id.replace("-active", "");
					oldChild.id = oldChildID;
					var faculty = document.getElementById("nav-faculties-selected");
					faculty.innerHTML = this.innerHTML;
					var child = faculty.children[0];
					var childID = child.id;
					childID += "-active";
					child.id = childID;
					document.getElementById(openWindowId).style.display = "none";
					openWindowId = "";
					optionClick = 0;
				};
			})(i), false);
		}
		
		var cafedras = document.getElementsByClassName("nav-cafedras-link");

		for (var i = 0; i < cafedras.length; i++) {
			cafedras[i].addEventListener("click", (function(i) {
				return function() {
					document.getElementById("nav-cafedras-selected").innerHTML = this.innerHTML;
					document.getElementById(openWindowId).style.display = "none";
					openWindowId = "";
					optionClick = 0;
				};
			})(i), false);
		}
		
		var groups = document.getElementsByClassName("nav-groups-link");

		for (var i = 0; i < groups.length; i++) {
			groups[i].addEventListener("click", (function(i) {
				return function() {
					document.getElementById("nav-groups-selected").innerHTML = this.innerHTML;
					document.getElementById(openWindowId).style.display = "none";
					openWindowId = "";
					optionClick = 0;
				};
			})(i), false);
		}
		window.onscroll = function() {
		  var scrolled = window.pageYOffset || document.documentElement.scrollTop;
		  if (scrolled > 170) {
			var sidebar = document.getElementById("schedule-sidebar");
			sidebar.style.position = "fixed";
			sidebar.style.top = "0px";
			
		  } else {
			document.getElementById("schedule-sidebar").style.position = "static";	
		  }
		}
		
    </script>
